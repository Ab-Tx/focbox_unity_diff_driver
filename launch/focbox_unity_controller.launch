<?xml version="1.0"?>

<launch>
        <!-- Parameters for the hardware interface and controllers -->
        <rosparam file="$(find focbox_unity_controller)/config/control.yaml"/>

        <!-- Start a controller for our joints -->
        <node name="joint_controllers_spawner" pkg="controller_manager" type="spawner"
                respawn="false" output="screen" clear_params="true"
                args="/focbox_unity_controller/joint_state_controller
                /focbox_unity_controller/left_wheel_velocity_controller
                /focbox_unity_controller/right_wheel_velocity_controller" />

        <!-- launch our hardware interface -->
        <node pkg="focbox_unity_controller"
                type="focbox_unity_controller_node"
                name="focbox_unity_controller" output="screen" clear_params="true"
                required="true"/>

        <!-- Start a differential controller -->
        <node name="diff_controller_spawner"  pkg="controller_manager"  type="spawner"  output="screen"  args="/focbox_unity_controller/differential_controller" />
</launch>